<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF5EE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/message_convo_sent_ll"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >

            <TextView
                android:id="@+id/convo_sent_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@drawable/sent_message_layout"
                android:linksClickable="true"
                android:padding="7dp"
                android:text="HEllo sir how are you"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textColorLink="#2F4F4F">

            </TextView>

            <TextView
                android:id="@+id/convo_sent_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="9:00"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >

            <ImageView
                android:id="@+id/convo_sent_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_baseline_image_24"
                android:layout_gravity="end"
                >

            </ImageView>

            <TextView
                android:id="@+id/convo_sent_photo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="9:00"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_convo_rcvd_ll"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            >

            <TextView
                android:id="@+id/convo_rcvd_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:gravity="bottom"
                android:text="9:00"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <TextView
                android:id="@+id/convo_rcvd_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@drawable/rcvd_message_layout"
                android:linksClickable="true"
                android:padding="7dp"
                android:text="HEllo sir how are you"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textColorLink="#2F4F4F">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/convo_rcvd_photo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:gravity="bottom"
                android:text="9:00"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:id="@+id/convo_rcvd_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_baseline_image_24"
                android:layout_gravity="start"
                >

            </ImageView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

